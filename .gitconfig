# This is Git's per-user configuration file.

[include]
    path = ~/.gitconfig.local

[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff --word-diff
    log = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    st = status
    unstage = reset HEAD

[core]
    editor = /usr/bin/vim

[commit]
    template = ~/.commit_template
